<plugin:plugin xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns:plugin="http://www.elega9t.com/platform/plugin">

    <plugin:info>
        <plugin:id>com.elega9t.elixir-gui</plugin:id>
        <plugin:name>Elixir Database Administrator</plugin:name>
        <plugin:description>Elixir Database Administrator</plugin:description>
        <plugin:version>1.0-SNAPSHOT</plugin:version>
        <plugin:vendor>elega9t</plugin:vendor>
        <plugin:category>Application</plugin:category>
        <plugin:icon>/com/elega9t/elixir/gui/icons/icon.png</plugin:icon>
    </plugin:info>

    <plugin:docks>
        <plugin:dock location="LEFT_FIRST" id="Connections" name="Connections" componentClass="com.elega9t.elixir.gui.components.ConnectionsPanel" visible="true">
            <plugin:icon>/com/elega9t/elixir/gui/icons/database_connections.png</plugin:icon>
            <plugin:action id="ExpandAll" name="Expand All" description="Expand All" class="com.elega9t.gui.platform.actions.menu.file.ExitAction" keyboardShortcut="ctrl pressed X">
                <plugin:icon>/com/elega9t/elixir/gui/icons/expand_all.png</plugin:icon>
            </plugin:action>
        </plugin:dock>
        <plugin:dock location="BOTTOM_FIRST" id="Results" name="Results" componentClass="com.elega9t.elixir.gui.components.ResultsPanel" visible="true">
            <plugin:icon>/com/elega9t/elixir/gui/icons/result.png</plugin:icon>
        </plugin:dock>
        <plugin:dock location="BOTTOM_FIRST" id="Query History" name="Query History" componentClass="com.elega9t.elixir.gui.components.QueryHistoryPanel">
            <plugin:icon>/com/elega9t/elixir/gui/icons/query_history.png</plugin:icon>
        </plugin:dock>
    </plugin:docks>

</plugin:plugin>