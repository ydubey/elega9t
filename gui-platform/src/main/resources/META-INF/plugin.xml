<plugin:plugin xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns:plugin="http://www.elega9t.com/platform/plugin">

    <plugin:info>
        <plugin:id>com.elega9t.gui.platform</plugin:id>
        <plugin:name>Elega9t GUI Platform</plugin:name>
        <plugin:description>Platform for building GUI applications</plugin:description>
        <plugin:version>1.0-SNAPSHOT</plugin:version>
        <plugin:vendor>elega9t</plugin:vendor>
        <plugin:category>Platform</plugin:category>
    </plugin:info>

    <plugin:actions>
        <plugin:groups id="MainMenu.FileMenu" name="File" description="File menu">
            <plugin:add-to-group group-id="MainMenu"/>
            <plugin:action id="ExitApplication" name="Exit" description="Exit" class="com.elega9t.gui.platform.actions.menu.file.ExitAction"/>
        </plugin:groups>
    </plugin:actions>

    <plugin:docks>
        <plugin:dock location="LEFT_FIRST" id="Connections" name="Connections" componentClass="javax.swing.JPanel">
            <plugin:icon>/com/elega9t/platform/icons/edit.png</plugin:icon>
        </plugin:dock>
        <plugin:dock location="LEFT_LAST" id="Connections 2" name="Connections 2" componentClass="javax.swing.JPanel"/>
        <plugin:dock location="RIGHT_FIRST" id="Connections" name="Connections" componentClass="javax.swing.JPanel"/>
        <plugin:dock location="BOTTOM_LAST" id="Connections" name="Connections" componentClass="javax.swing.JPanel"/>
        <plugin:dock location="CENTER" id="Editor" name="Editor" componentClass="javax.swing.JTabbedPane"/>
    </plugin:docks>

</plugin:plugin>